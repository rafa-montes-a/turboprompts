<div>
  <div>
    <h1>
      List of all questions
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new question
    </h2>

    <form action="/insert_question" method="post">
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="prompt_id_box">
          Prompt
        </label>

        <input type="text" id="prompt_id_box" name="query_prompt_id">
      </div>

      <div>
        <label for="answer_box">
          Answer
        </label>

        <textarea id="answer_box" name="query_answer" rows="3"></textarea>
      </div>

      <div>
        <label for="feed_box">
          Feed
        </label>

        <textarea id="feed_box" name="query_feed" rows="3"></textarea>
      </div>

      <button>
        Create question
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Prompt
        </th>

        <th>
          Answer
        </th>

        <th>
          Feed
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_questions.each do |a_question| %>
      <tr>
        <td>
          <%= a_question.id %>
        </td>

        <td>
          <%= a_question.user_id %>
        </td>

        <td>
          <%= a_question.prompt_id %>
        </td>

        <td>
          <%= a_question.answer %>
        </td>

        <td>
          <%= a_question.feed %>
        </td>

        <td>
          <%= time_ago_in_words(a_question.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_question.updated_at) %> ago
        </td>

        <td>
          <a href="/questions/<%= a_question.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
